jQuery(document).ready(function($) {

	// flags / header 

	jQuery('#flags .top img').click(function() {
		jQuery('#flags').toggleClass('expanded');
		jQuery('.canadalocal').addClass('hide');
	})
	jQuery('#flags .canadalocal').click(function() {
		window.location.href = jQuery(this).attr('rel');
	});
	jQuery('#flags .middle > div').click(function() {
		if (jQuery(this).hasClass('redirect')) {
			window.location.href = jQuery(this).attr('rel');
		}
		jQuery('#flags').toggleClass('expanded');		
		jQuery('.canadalocal').addClass('hide');
		jQuery('header #contactinfo').text(jQuery('img', this).attr('rel'));
		jQuery('#flags .default').attr('src', jQuery('img', this).attr('src'));
	})
	temp = "img." + jQuery('#flags .top .default').attr('rel');
	jQuery('#contactinfo').text(jQuery(temp).attr('rel'));

	// Add TAB Checkbox Styling to Gravity Forms

	jQuery('.tabform_wrapper .checkboxes, .tabform_wrapper .description').wrapAll('<div id="tab_form_checkboxes" />');

	// Clear Search

	jQuery('input[name=s]').click(function() { jQuery(this).val(''); })
	jQuery('.search-results .excerpt a').removeClass('btn btn-small')

	jQuery('.widget_subscribe .button').css('background', jQuery('.widget_subscribe').parents('.spacer').children('h3').css('color'));

	jQuery('.casestudies').parents('li').children('.widgettitle').html('<span>'+jQuery('.casestudies').parents('li').children('.widgettitle').text()+'</span>');
	jQuery(".menu-footer-bottom-container >ul>li:nth-child(1) a").css('border','none');


});











