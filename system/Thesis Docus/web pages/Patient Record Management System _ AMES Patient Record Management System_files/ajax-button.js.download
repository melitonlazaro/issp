jQuery(document).ready(function($) {
	jQuery('[data-action]').click(function(){
		var form = jQuery(this);
		var dataarr = new Array();
		for(var i in form.data()) {
			var subarr = new Array();
			subarr['name'] = i;
			subarr['value'] = form.data()[i];
			dataarr.push(subarr);
		}
		var serialized = jQuery.param(form.serializeArray().concat(dataarr));
		var data_refresh = jQuery(this).data('refresh');
		jQuery.post(ajaxurl,serialized,function(){
			if (data_refresh) {
				location.reload();
			};
		})
	})
});
